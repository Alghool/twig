{
    "name": "daycry/twig",
    "description": "twig for Codeigniter 4",
    "keywords":
    [
        "codeigniter", "twig", "templates", "codeigniter4", "html"
    ],
    "homepage": "https://github.com/daycry/twig",
    "authors":
    [
        {
            "name": "daycry",
            "homepage": "https://github.com/daycry",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "require":
    {
        "php": ">=7.4",
        "twig/twig": "^3.1.1"
    },
    "require-dev":
    {
        "phpunit/phpunit": "^9.1",
        "codeigniter4/framework": "4.1.2",
        "friendsofphp/php-cs-fixer": "3.6.*",
        "mikey179/vfsstream": "^1.6",
        "nexusphp/cs-config": "^3.3",
        "nexusphp/tachycardia": "^1.0",
        "phpstan/phpstan": "^1.7.1",
        "rector/rector": "0.13.9"
    },
    "autoload":
    {
        "psr-4":
        {
            "Daycry\\Twig\\": "src/"
        }
    },
    "autoload-dev":
    {
        "psr-4":
        {
            "Daycry\\Twig\\": "tests/Twig/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "cs-fixer": "vendor/bin/php-cs-fixer fix src",
        "cs-fixer-tests": "vendor/bin/php-cs-fixer fix tests"
    }
}
